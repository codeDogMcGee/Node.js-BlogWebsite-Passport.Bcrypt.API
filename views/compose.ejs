<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">

  <div class="form-group">
    <label for="postTitleInput">Title</label>
    <input class="form-control" name="postTitle" id="postTitleInput" type="text" autocomplete="on">
  </div>

  <div class="form-group">
    <label for="postBodyInput">Post</label>
    <textarea class="form-control" name="postBody" id="postBodyInput" rows="5" autocomplete="on"></textarea>
  </div>

  <button class="btn btn-dark" name="publishSubmit" type="submit">Publish</button>

</form>

<%- include("partials/footer") -%>
