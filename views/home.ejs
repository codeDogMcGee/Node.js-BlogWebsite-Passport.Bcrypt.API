<%- include("partials/header") -%>

  <h1>Home</h1>
  <p><%= descriptionContent %></p>

  <% posts.forEach( function(post) { %>
    <div class="item">
      <h3><%= post.title %></h3>
      <p>
        <%= post.content.slice(0, 100) + " ... " %>
        <a href="/posts/<%= post._id %>">Read More</a>
      </p>
    </div>
  <% }) %>

<%- include("partials/footer") -%>
